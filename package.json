{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "A simple react boilerplate",
  "scripts": {
    "clean": "rm -rf build/server && rm -rf build/static/css && rm -rf build/static/js",
    "build:client": "NODE_ENV=production webpack --progress --config webpack.config.js",
    "build:server": "NODE_ENV=production webpack --progress --config webpack.config.server.js",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "lint": "eslint app",
    "start:dev": "NODE_ENV=development node ./app/server",
    "start": "node ./build/server/index"
  },
  "author": "Robbin Janssen",
  "license": "ISC",
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.22.0",
    "css-loader": "^0.26.1",
    "dotenv": "^4.0.0",
    "eslint": "^3.14.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.5",
    "node-sass": "^4.3.0",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.0",
    "webpack-bundle-analyzer": "^2.2.1",
    "webpack-bundle-size-analyzer": "^2.5.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0"
  },
  "dependencies": {
    "antd": "^2.6.4",
    "express": "^4.14.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.2",
    "react-router": "^4.0.0-alpha.6",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  }
}
