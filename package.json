{
  "name": "boilerplate",
  "version": "0.0.1",
  "description": "A simple react boilerplate",
  "scripts": {
    "clean": "rm -rf build/server && rm -rf build/static/css && rm -rf build/static/js",
    "build:client": "NODE_ENV=production webpack --progress --config webpack.config.js",
    "build:server": "NODE_ENV=production webpack --progress --config webpack.config.server.js",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "lint": "eslint app --ext js --ext jsx",
    "start:dev": "NODE_ENV=development node ./app/server",
    "start": "node ./build/server/index"
  },
  "author": "Robbin Janssen",
  "license": "ISC",
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-bundle-size-analyzer": "^2.7.0",
    "webpack-dev-middleware": "^2.0.3",
    "webpack-hot-middleware": "^2.21.0"
  },
  "dependencies": {
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
  }
}
