{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {
    "document": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DEVELOPMENT__": true
  },
  "rules": {
    "global-require": 0,
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "__DEVELOPMENT__",
          "__CLIENT__",
          "__SERVER__"
        ]
      }
    ],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": [
          "Link"
        ],
        "specialLink": [
          "to"
        ],
        "aspects": [
          "noHref",
          "invalidHref",
          "preferButton"
        ]
      }
    ]
  }
}
